<% @current_date_live_on = ""  %>
<h1>News</h1>

<p><%= paginate @stories %>
<%= page_entries_info @stories %>
</p>
<ul>
<% @stories.each do |story| %>

	<% if story.date_live_on != @current_date_live_on %>
		<% if @current_date_live_on != "" %>
			</ul><ul>	
		<% end %>
			<li>
				<h4><%= story.date_live_at.to_s(:gp_article).upcase %></h4>
	<% end %>
	
		<div class="wsw-story"><% unless story.legacy_photo.nil? %>
		<a href="<%= story.filename %>"><img style="float:left" src="<%= story.legacy_photo.thumbnail_photo %>" width="<%= story.legacy_photo.thumbnail_photo_width %>" height="<%= story.legacy_photo.thumbnail_photo_height %>" /></a>
		<% end %><h2><a href="<%= story.filename %>"><% if story.category_id == 2 && story.feature_type %><%= story.feature_type + " - "%><% end %><%= story.headline.upcase %></a></h2>
 		</div>
	</li>
	
	
	<% @current_date_live_on = story.date_live_on %>
<% end %>
<br />
<%= paginate @stories %>
<%= page_entries_info @stories %>
