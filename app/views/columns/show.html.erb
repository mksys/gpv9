<p>Columns<% if @story.feature_type %> - <%= @story.feature_type %><% end %></p>

<h1><%= @story.headline %></h1>
<% unless @story.legacy_photo.nil? %>
<img style="float:right" src="<%= @story.legacy_photo.display_photo %>" width="<%= @story.legacy_photo.display_photo_width %>" height="<%= @story.legacy_photo.display_photo_height %>" />
<% end %>
<% if @story.show_author %><h3>BY <%= @story.author.upcase %></h3><% end %>
<p><%= raw @story.body %></p>
<p><%= @story.body_html %></p>

